# CCDC CyberHawks

## LISTENING & PORTS
Protocol 2
Port 22

# Optionally, Bind to an address/interface
# ListenAddress ::
# ListenAddress 0.0.0.0

## HOSTKEYS
HostKey /etc/ssh/ssh_host_ed25519_key
HostKey /etc/ssh/ssh_host_ecdsa_key

# Optionally, enable older encryption methods. DO NOT DO THIS LIGHTLY.
# HostKey /etc/ssh/ssh_host_rsa_key
# HostKey /etc/ssh/ssh_host_dsa_key

## LOGGING
SyslogFacility AUTH
LogLevel VERBOSE

## AUTHENTICATION
LoginGraceTime 20
PermitRootLogin no
StrictModes yes

# Auth Methods
PubkeyAuthentication yes
AuthorizedKeysFile .ssh/authorized_keys

# Don't read the user's ~/.rhosts and ~/.shosts files
IgnoreRhosts yes

PasswordAuthentication no
HostbasedAuthentication no
KbdInteractiveAuthentication no
ChallengeResponseAuthentication no

UsePAM no

# To enable empty passwords, change to yes (NOT RECOMMENDED)
PermitEmptyPasswords no

# Disable all legacy / weak auth paths
IgnoreRhosts yes
HostbasedAuthentication no
PermitEmptyPasswords no

## SESSION HARDENING
AllowTcpForwarding no
AllowAgentForwarding no
X11Forwarding no
PermitTunnel no
GatewayPorts no
PermitUserEnvironment no

PrintMotd no
PrintLastLog yes
TCPKeepAlive no

# Privilege Separation is turned on for security. Modern OpenSSH has this required by default
# UsePrivilegeSeparation yes

## CONNECTION CONTROL
ClientAliveInterval 300
ClientAliveCountMax 0

## ENV 

# Allow client to pass locale environment variables
AcceptEnv LANG LC_*

## SFTP
# Required to allow scp to work
Subsystem sftp /usr/lib/openssh/sftp-server